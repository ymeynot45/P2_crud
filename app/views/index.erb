<div class="container">
  <h3>Notes</h3>
  <% if @notes%>
    <% @notes.each do |note| %>
     <ul>
       <li><a href="/note/<%=note.id%>"><%=note.title%></a> -- <a href="/note/delete/<%=note.id%>"> Delete</a></li>
     </ul>
    <%end%>
  <%else%>
    <p>Make some notes!</p>
  <% end %>
</div>

<div class="container2">
<h3>Author a new note</h3>
<form action="/notes/" method="post" id="new_note">
  <%if @errors%>
    <p>You need to have both a title and Content to submit.</p>
  <%end%>
  Title: <br>
  <input type="text" name="note[title]" placeholder="Title"><br>
  Content: <br>
   <textarea maxlength="350" form="new_note" cols="50" rows="5" name="note[content]" placeholder="No swearing please!"></textarea><br>
<input type="submit" value="Submit">
</form>

</div>